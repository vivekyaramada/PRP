<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jsfdemon" default="compile.module.jsfdemon">
  <dirname property="module.jsfdemon.basedir" file="${ant.file.module_jsfdemon}"/>
  
  <property name="module.jdk.home.jsfdemon" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jsfdemon" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jsfdemon" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jsfdemon" value="-encoding windows-1252 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="jsfdemon.output.dir" value="${module.jsfdemon.basedir}/target/classes"/>
  <property name="jsfdemon.testoutput.dir" value="${module.jsfdemon.basedir}/target/test-classes"/>
  
  <path id="jsfdemon.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jsfdemon.module.production.classpath">
    <path refid="${module.jdk.classpath.jsfdemon}"/>
  </path>
  
  <path id="jsfdemon.runtime.production.module.classpath">
    <pathelement location="${jsfdemon.output.dir}"/>
  </path>
  
  <path id="jsfdemon.module.classpath">
    <path refid="${module.jdk.classpath.jsfdemon}"/>
    <pathelement location="${jsfdemon.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
  </path>
  
  <path id="jsfdemon.runtime.module.classpath">
    <pathelement location="${jsfdemon.testoutput.dir}"/>
    <pathelement location="${jsfdemon.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jsfdemon">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jsfdemon">
    <patternset refid="excluded.from.module.jsfdemon"/>
  </patternset>
  
  <path id="jsfdemon.module.sourcepath">
    <dirset dir="${module.jsfdemon.basedir}">
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jsfdemon" depends="compile.module.jsfdemon.production,compile.module.jsfdemon.tests" description="Compile module JSFDEMON"/>
  
  <target name="compile.module.jsfdemon.production" depends="register.custom.compilers" description="Compile module JSFDEMON; production classes">
    <mkdir dir="${jsfdemon.output.dir}"/>
    <javac2 destdir="${jsfdemon.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jsfdemon}/javac">
      <compilerarg line="${compiler.args.jsfdemon}"/>
      <bootclasspath refid="jsfdemon.module.bootclasspath"/>
      <classpath refid="jsfdemon.module.production.classpath"/>
      <src refid="jsfdemon.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jsfdemon"/>
    </javac2>
    
    <copy todir="${jsfdemon.output.dir}">
      <fileset dir="${module.jsfdemon.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jsfdemon.tests" depends="register.custom.compilers,compile.module.jsfdemon.production" description="compile module JSFDEMON; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jsfdemon" description="cleanup module">
    <delete dir="${jsfdemon.output.dir}"/>
    <delete dir="${jsfdemon.testoutput.dir}"/>
  </target>
</project>